<UserControl
    x:Class="FileTransporter.Panels.ClientPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:panels="clr-namespace:FileTransporter.Panels"
    x:Name="root" d:DesignHeight="450"
    d:DesignWidth="800" mc:Ignorable="d">
    <TabControl Style="{StaticResource TabControlPivotStyle}">
        <TabItem Header="文件发送">
            <panels:FileTransportPanel
                Margin="0,16,0,0"
                Socket="{Binding DataContext.Socket, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                Type="Send" />
        </TabItem>
        <TabItem Header="文件接收">
            <panels:FileTransportPanel
                Margin="0,16,0,0"
                Socket="{Binding DataContext.Socket, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                Type="Receive" />
        </TabItem>
        <TabItem Header="文件浏览">
            <panels:FileBrowserPanel Margin="0,16,0,0" Socket="{Binding DataContext.Socket, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" />
        </TabItem>
    </TabControl>
</UserControl>