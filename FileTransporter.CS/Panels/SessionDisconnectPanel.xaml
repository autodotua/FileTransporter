<UserControl
    x:Class="FileTransporter.Panels.SessionDisconnectPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FileTransporter.Panels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    d:DesignHeight="450" d:DesignWidth="800"
    mc:Ignorable="d">
    <ui:SimpleStackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center" Spacing="12">
        <TextBlock HorizontalAlignment="Center" Text="与服务器的连接已断开。请重新连接。" />
        <Button
            Width="120" HorizontalAlignment="Center"
            Click="Button_Click" Content="返回登陆页面" />
    </ui:SimpleStackPanel>
</UserControl>